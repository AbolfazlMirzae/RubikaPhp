{
    "name": "rubikaphp/lib",
    "description": "PHP SDK for Rubika Bot API",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Abolfazi Mirzaei",
            "email": "mirzaiabolfaz16@gmail.com"
        }
    ],
    "require": {
        "php": ">=8.0",
        "ext-curl": "*",
        "ext-json": "*",
        "guzzlehttp/guzzle": "^7.0",
        "league/html-to-markdown": "^5.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "RubikaPhp\\": "lib/"
        },
        "classmap": [
            "lib/Models/Models.php",
            "lib/Models/Button.php",
            "lib/Exceptions/Exceptions.php",
            "lib/Enums/Enums.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "RubikaPhp\\Tests\\": "tests/"
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}